{% extends 'base.html.twig' %}

{% block title %}FTP Edit{% endblock %}

{% block content %}
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <section class="content-header">
        <h1>FTP-Passwort bearbeiten </h1>
      </section>
      <!-- Main content -->
      <section class="content">
        <div class="row">
          <!-- left column -->
          <div class="col-md-6">

          {# <form action="/support/makler/{{user_id}}/ftpedit" method="POST"> #}
          <form action="{{ path('makler_ftp_edit', {'uid': user_id}) }}" method="POST">
            <!-- Horizontal Form -->
            <!-- /.box -->
            <!-- general form elements disabled -->
            <div class="box box-warning">
              <div class="box-header with-border">
                <h3 class="box-title">Neues FTP-Passwort vergeben</h3>
              </div>
              <!-- /.box-header -->
              <div class="box-body">
                  <!-- text input -->
                   <div class="form-group">
                        <label for="Email">UserID</label>
                        <input type="text" class="form-control" id="userid" name="userid" placeholder="{{user_id}}" value="{{user_id}}" required readonly>
                  </div>
                  <div class="form-group">
                    <label for="username">FTP Username</label>
                    <input type="username" class="form-control" id="ftp_user" name="ftp_user" placeholder="{{username}}" value="{{username}}" required readonly>
                  </div>
                  <div class="form-group">
                    <label for="FTP-Passwort">FTP Passwort <small>Klartext</small></label>
                    <input type="text" class="form-control" id="ftppasswort" name="ftppasswort" placeholder="FTP-Passwort" required>
                  </div>
              </div>
			        <div class="box-footer">
                  <button type="submit" class="btn btn-primary" name="savebutton" value="true">Ã„ndern</button>
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>
  </form>
  <!-- /.content-wrapper -->
{% endblock %}