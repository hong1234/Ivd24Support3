{% extends "base.html.twig" %}

{% block title %}New Makler{% endblock %}
{# {% block head %}
    {{ parent() }}
{% endblock %} #}
{# {% block navigation %}
    
{% endblock %} #}

{% block content %}
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>Makler anlegen</h1>
            <div>
                <p style="color:red;">{{error}}</p>
            </div>
        </section>
        <!-- Main content -->
        <section class="content">
            <div class="row">
                <!-- left column -->
                <div class="col-md-6">
                    <!-- general form elements -->
                    <div class="box box-primary">
                        {# <form action="/admin/makler/new" method="POST"> #}
                        <form action="{{ path('makler_new') }}" method="POST">
                            <!-- /.box-header -->
                            <!-- form start -->
                            <div class="box-header with-border">
                                <h3 class="box-title">Persönliche Daten</h3>
                            </div>
                            <div class="box-body">
                                <div class="form-group">
                                    <label for="Anrede">Anrede</label>
                                    <select id="anrede" name="anrede" class="form-control" required>
                                        <option value="Herr">Herr</option>
                                        <option value="Frau">Frau</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="Titel">Titel</label>
                                    <input type="text" class="form-control" id="titel" name="titel" placeholder="Prof. Dr.">
                                </div>
                                <div class="form-group">
                                    <label for="mnummer">Mitgliedsnummer</label>
                                    <input type="text" class="form-control" id="mnummer" name="mnummer" placeholder="mnummer">
                                </div>
                                <div class="form-group">
                                    <label for="Namenstitel">Namenstitel</label>
                                    <input type="text" class="form-control" id="namenstitel" name="namenstitel" placeholder="Kfm./ Ing(FH)/ B.Sc. (usw.)">
                                </div>
                                <div class="form-group">
                                    <label for="Vorname">Vorname</label>
                                    <input type="text" class="form-control" id="vorname" name="vorname" placeholder="Vorname" value="{{vorname}}" required>
                                </div>
                                <div class="form-group">
                                    <label for="name">Nachname</label>
                                    <input type="text" class="form-control" id="name" name="name" placeholder="Nachname" value="{{name}}" required>
                                </div>
                                <div class="form-group">
                                    <label for="Firma">Firma</label>
                                    <input type="text" class="form-control" id="firma" name="firma" placeholder="Firma" value="{{firma}}" required>
                                </div>
                                <div class="form-group">
                                    <label for="Strasse">Straße Nr.</label>
                                    <input type="text" class="form-control" id="strasse" name="strasse" placeholder="Straße & Hausnummer" value="{{strasse}}" required>
                                </div>
                                <div class="form-group">
                                    <label for="plz">PLZ</label>
                                    <input type="text" class="form-control" id="plz" name="plz" placeholder="PLZ" value="{{plz}}" required>
                                </div>
                                <div class="form-group">
                                    <label for="ort">Ort</label>
                                    <input type="text" class="form-control" id="ort" name="ort" placeholder="Ort" value="{{ort}}" required>
                                </div>
                                <div class="form-group">
                                    <label for="Bundesland">Bundesland</label>
                                    <select id="bundesland" name="bundesland" class="form-control" required>
                                        {% for land in bundeslaender %}
                                            <option value={{ land.geo_bundesland_id|e }} {% if land.geo_bundesland_id == bundesland_id %} selected {% endif %}>{{ land.bundesland|e }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="Telefon">Telefon</label>
                                    <input type="text" class="form-control" id="telefon" name="telefon" placeholder="Telefon" value="{{telefon}}" required>
                                </div>
                                <div class="form-group">
                                    <label for="Telefax">Telefax</label>
                                    <input type="text" class="form-control" id="telefax" name="telefax" placeholder="Telefax" value="{{telefax}}">
                                </div>
                                <div class="form-group">
                                    <label for="Homepage">Homepage</label>
                                    <input type="text" class="form-control" id="homepage" name="homepage" placeholder="Homepage" value="{{homepage}}">
                                </div>
				                <div class="form-group">
                                    <label for="Homepage">SEO-URL</label>
                                    <div>
                                        <input type="text" class="form-control" style="width: 70%; float: left;" id="seo_url" name="seo_url" placeholder="seo_url" value="{{seo_url}}" required>
                                        <button id="seo_button" type="button" style="float: left;" class="btn btn-primary">SEO-URL erzeugen</button>
                                        <div style="clear: left;"></div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="Geschaefststelle">Geschäftsstelle</label>
                                    <select id="geschaeftsstelle" name="geschaeftsstelle" class="form-control" required>
                                        {% for stelle in geschaeftsstelle %}
                                            <option value={{ stelle.geschaeftsstelle_id|e }} {% if stelle.geschaeftsstelle_id == geschaeftsstelle_id %} selected {% endif %}>{{ stelle.name|e }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                    </div>            
                </div>
                <!-- /.box -->
                </div>
                <!--/.col (left) -->
                <!-- right column -->
                <div class="col-md-6">
                <!-- Horizontal Form -->
                {# <div>
                    <p style="color:red;">{{error}}</p>
                </div> #}
            
                <!-- /.box -->
                <!-- general form elements disabled -->
                    <div class="box box-warning">
                        <div class="box-header with-border">
                            <h3 class="box-title">User Daten</h3>
                        </div>
                        <!-- /.box-header -->
                        <div class="box-body">
                            <!-- text input -->
                            <div class="form-group">
                                <label for="Email">Email address</label>
                                <input type="email" class="form-control" id="email" name="email" placeholder="E-Mailadresse" value="{{email}}" required>
                            </div>
                            <div class="form-group">
                                <label for="username">Benutzername</label>
                                <input type="username" class="form-control" id="username" name="username" placeholder="Benutzername" value="{{username}}" required>
                            </div>
                            <div class="form-group">
                                <label for="UserPasswort">Passwort <small>Klartext</small></label>
                                <input type="text" class="form-control" id="userpasswort" name="userpasswort" placeholder="Passwort" value="{{passwort}}" required>
                            </div>
                        </div>
                    <!-- /.box-body -->
                    </div>

                    <div class="box box-warning">
                        <div class="box-header with-border">
                            <h3 class="box-title">FTP Daten</h3>
                        </div>
                        <!-- /.box-header -->
                        <div class="box-body">
                            <div class="form-group">
                                <label for="FTP-Passwort">FTP Passwort <small>Klartext</small></label>
                                <input type="text" class="form-control" id="ftppasswort" name="ftppasswort" placeholder="FTP-Passwort" value="{{ftppasswort}}" required>
                            </div>
                        </div>
                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary" name="savebutton" value="true">Submit</button>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</form>
  <!-- /.content-wrapper -->
{% endblock %}

{% block footer %}
    {{ parent() }}
    <script>
        $(document).ready(function() {
          $('#seo_button').on('click', function() {
            $.ajax({
              method: "POST",
              url: "/seourl",
              data: { text: $("#firma").val() }
            })
            .done(function( res ) {
              $("#seo_url").val(res.seourl);
            });
          });
        });
    </script>
{% endblock %}