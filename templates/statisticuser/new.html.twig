{% block content %}
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <section class="content-header">
        <h1>StatisticUser anlegen</h1>
        {% if error|length %}
          <div class="alert alert-danger" role="alert">
            {{error}}
          </div>
        {% endif %}
      </section>
      <!-- Main content -->
      <section class="content">
        <div class="row">
          <!-- left column -->
          <div class="col-md-6">
          {# <form action="/statisticuser/new" method="POST"> #}
          <form action="{{ path('statisticuser_new') }}" method="POST">
            <div class="box box-warning">
                {# <div class="box-header with-border">
                    <h3 class="box-title">Statistic User</h3>
                </div> #}
                <!-- /.box-header -->
                <div class="box-body">
                    <!-- text input -->
                    <div class="form-group">
                        <label for="Email">Email-Adresse</label>
                        <input type="email" class="form-control" id="email" name="email" placeholder="E-Mailadresse" value="{{email}}" required>
                    </div>
                    <div class="form-group">
                        <label for="username">Username</label>
                        <input type="username" class="form-control" id="username" name="username" placeholder="Username" value="{{username}}" required>
                    </div>
                    <div class="form-group">
                        <label for="Passwort">Passwort <small>Klartext</small></label>
                        <input type="text" class="form-control" id="passwort" name="passwort" placeholder="Passwort" value="{{passwort}}" required>
                    </div>
                    <div class="form-group">
                        <label for="Geschaefststelle">Gesch√§ftsstelle</label>
                        <select id="geschaeftsstelle" name="geschaeftsstelle" class="form-control" required>
                        {% for stelle in geschaeftsstelle %}
                            <option value={{ stelle.geschaeftsstelle_id|e }} {% if stelle.geschaeftsstelle_id == geschaeftsstelleId %} selected {% endif %}>{{ stelle.name|e }}</option>
                        {% endfor %}
                        </select>
                    </div>
                </div>
			          <div class="box-footer">
                    <button type="submit" class="btn btn-primary" name="savebutton" value="true">Speichern</button>
                </div>
                <!-- /.box-body -->
            </div>
          </div>
        </div>
      </section>
    </div>
  </form>
  <!-- /.content-wrapper -->
{% endblock %}

